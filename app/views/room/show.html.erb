<%= link_to "←戻る",:back %>
<% if @room.user_id == current_user.id %>
    <%= link_to("編集","/room/#{@room.id}/edit")%>
<% end %>

<%= image_tag @room.image_name %>
<%= @room.name %>
¥<%= @room.price %>~
<%= @room.address %>
<%= @room.introduce %>

<%= form_with model:@reservation, url: reservation_create_path, local:true  do |f| %>

    
    <div class="field">
      <%= f.label :start_date %><br/>
      <%= f.date_field :start_date %>
    </div>
  
    <div class="field">
      <%= f.label :end_date %><br/>
      <%= f.date_field :end_date %>
    </div>

    <div class="field">
    <%= f.label :people %><br/>
    <%= f.text_field :people %>
    </div>

  
    <div class="actions">
      <%= f.submit "予約" %>
    </div>
    
  <% end %>