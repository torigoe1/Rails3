<%= form_with  url: room_search_path, local:true, method: :get  do |r| %>
    <%= r.label :area %><br/>
    <%= r.text_field :area %>
    <%= r.label :keyword %><br/>
    <%= r.text_field :keyword %>
    <%= r.submit "検索" %>
<% end %>

<% if @room != nil %>
    <% @room.each do |r| %>
        <%= image_tag r.image_name %>
        <%= r.name %>
        <%= r.address %>
        <%= r.introduce %>
        <%= r.price %>
        <%= link_to("詳細はこちら","/room/#{r.id}")%>
    <% end %>
<% end %>